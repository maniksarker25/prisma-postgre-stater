
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @unique @default(uuid())
  profileId   String
  username    String
  email       String      @unique
  isBlocked   Boolean     @default(false)
  role        UserRole    @default(USER)
  password    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userProfile NormalUser?
  Admin       Admin?
  SuperAdmin  SuperAdmin?

  @@map("users")
}

model NormalUser {
  id           String   @id @unique @default(uuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])
  bio          String
  profileImage String
  profession   String
  address      String
  education    String
  phone        String
  email        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("normalUsers")
}

model Admin {
  id            String   @id @unique @default(uuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])
  name          String
  email         String
  profile_image String?
  phone         String?
  address       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("admins")
}

model SuperAdmin {
  id            String   @id @unique @default(uuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])
  name          String
  email         String
  profile_image String?
  phone         String?
  address       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("superAdmins")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}
